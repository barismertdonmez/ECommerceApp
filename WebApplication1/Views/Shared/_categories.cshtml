@model List<Category>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h2 style="color:tomato" class="card-title">
                Kategoriler
            </h2>
        </div>
        <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action" asp-controller="Shop" asp-action="List" asp-route-id="">Tüm Kategoriler</a>
            @foreach (var item in Model)
            {
                <a class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == item.Name?"active":"")" asp-controller="Shop" asp-action="List" asp-route-category="@item.Name">@item.Name</a>
            }
        </div>
        <div class="">
            <form action="/shop/list">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <input name="price" type="text" class="form-control mr-2 w-75" placeholder="MaxPrice" value="" />
                    </li>
                    <li class="list-group-item">
                        <button type="submit" class="btn btn-outline-success mr-0">Search</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</div>


