@model ProductDetailsModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <div class="row">
        <div class="col-md-3">
            <img src="~/Images/@Model.Product.ImageUrl" class="img-fluid">
        </div>
        <div class="col-md-9">
            <h1 class="mb-3">@Model.Product.Name</h1>
            @foreach (var item in Model.Categories)
            {
                <a asp-controller="Shop" asp-action="List" asp-route-category="@item.Name" class="btn btn-link p-0 mb-3">@item.Name</a>
            }
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"></i>@Model.Product.Price
                </h4>
                <form asp-controller="Cart" asp-action="AddToCart" method="post" class="form-inline">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <div class="input-group mb-3">
                        <input type="number" name="quantity" value="1" min="1" step="1" class="form-control" style="width:100px"/>
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus">Add To Cart</i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <p class="p-3">@Model.Product.Description</p>
            </div>
        </div>
    </div>
</body>
</html>