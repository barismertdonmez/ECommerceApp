@model ProductModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <h1 class="h3">Edit Product</h1>
    <hr />
    <form asp-controller="Admin" asp-action="EditProduct" method="post">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="row">
            <div class="col-md-8">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Name">
                        @*<span asp-validation-for="Name" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" asp-for="Description"></textarea>
                        @*<span asp-validation-for="Description" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ImageUrl" class="col-sm-2 col-form-label">ImageUrl</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="ImageUrl">
                        @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Price">
                        @*<span asp-validation-for="Price" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="form-check form-check-inline">
                    <label class="form-check-label" for="">IsApproved</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="@Model.IsApproved">
                    <label class="form-check-label" for="inlineCheckbox1">True</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="@Model.IsApproved">
                    <label class="form-check-label" for="inlineCheckbox2">False</label>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10 offset-sm-2 my-3 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary ">Save Product</button>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                @foreach (var item in Model.Categories)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox"
                           class="custom-control-input"
                           name="categoryIds"
                           value="@item.Id"
                           id="category_@(item.Id)"
                           @(Model.SelectedCategories.Any(i=>i.Id==item.Id)?"checked":"")>
                        <label class="custom-control-label" for="category_@(item.Id)">@item.Name</label>
                    </div>
                }
                <hr />
                <div class="custom-control custom-checkbox">
                    <input asp-for="IsApproved" type="checkbox" class="custom-control-input">
                    <label asp-for="IsApproved" class="custom-control-label"></label>
                </div>
                <div class="custom-control custom-checkbox">
                    <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                    <label asp-for="IsHome" class="custom-control-label"></label>
                </div>

               @* @for (int i = 0; i < Model.SelectedCategories.Count; i++)
                {
                    <input type="hidden" name="SelectedCategories[@i].CategoryId" value="@Model.SelectedCategories[@i].Id">
                    <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[@i].Name">
                }

                @foreach (var item in (List<Category>)ViewBag.Categories)
                {
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox"
                           class="custom-control-input"
                           name="categoryIds"
                           value="@item.Id"
                           id="category_@(item.Id)"
                           @(Model.SelectedCategories.Any(i=>i.Id==item.Id)?"checked":"")>
                        <label class="custom-control-label" for="category_@(item.Id)">@item.Name</label>
                    </div>
                }*@
            </div>
        </div>
    </form>
</body>
</html>